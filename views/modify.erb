<h1>Modify a Contact</h1>

<h2>What information would you like to modify?</h2>
<form action="/contacts/<%=@contact.id%>" method="POST">
  <input name="_method" type="hidden" value="put" />
  <fieldset>
    <legend>Modify Contact</legend> 
    <input type="text" name="new_first_name" autofocus value="<%=@contact.firstname%>"/>
    <input type="text" name="new_last_name" autofocus value="<%=@contact.lastname%>"/>
    <input type="email" name="new_email" autofocus value="<%=@contact.e_mail%>"/>
    <input type="text" name="new_note" autofocus value="<%=@contact.paper%>"/>
    <input type="submit" name="submit" value ="Submit"/>
  </fieldset>
</form>